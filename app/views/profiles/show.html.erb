<div class="cover">
    <%= cover?(@user) %>
</div>
<%= render 'layouts/feed_nav' %>


<div class="border w-10/12 mx-auto p-5 bg-white mt-5 rounded">
    <h5 class="text-lg text-gray-700 mb-2">Say something</h5>
    <div class="flex justify-center items-start  ">
        <div class="field w-11/12 ">
            <input type="text" class="border w-full h-full"/>
        </div>
        <div class=" w-1/12 ">
            <button type="button" class="h-10  border w-10 bg-blue-500 text-white">
                <i class="fa fa-bullhorn"></i>
            </button>
        </div>
    </div>
</div>


<div class="border w-10/12 mx-auto p-5 bg-white mt-5 rounded">
    <div class="text-blue-500 capitalize border-b py-2">
        All posts
    </div>
    <ul>
        <% @opinions.each do |o| %>
        <li class="py-4 px-2  flex">
            <div class="h-12 w-12">
                <%= avatar?(o.user) %>
            </div>
            <div class="flex flex-col ml-3">
                <div class="font-semibold text-gray-700">
                    <%= o.user.FullName %>
                </div>
                <div class="text-gray-500">
                    <%= o.Text %>
                </div>

            </div>

        </li>

        <% end %>
    </ul>
</div>