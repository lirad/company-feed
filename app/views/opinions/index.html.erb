<p id="notice"><%= notice %></p>


<%= render 'opinions/form'%>



<div class="border w-10/12 mx-auto p-5 bg-white mt-5 rounded">
  <ul>
    <% @opinions.each do |o| %>
    <li class="py-4 px-2  flex">
      <div class="h-12 w-12">
        <%= has_avatar(o.user) %>
      </div>
      <div class="flex flex-col ml-3">
        <div class="font-semibold text-gray-700 hover:text-blue-700">
          <%= link_to o.user.FullName, {:controller => "profiles", :action => "show", :id => o.user.id }%>
        </div>
        <div class="text-gray-500">
          <%= o.Text %>
        </div>
        
      </div>

    </li>

    <% end %>
  </ul>
</div>



<br>