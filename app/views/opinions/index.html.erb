<p id="notice"><%= notice %></p>


<%= simple_form_for(@opinion) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


<div class="border w-10/12 mx-auto p-5 bg-white mt-5 rounded">
  <h5 class="text-lg text-gray-700 mb-2">Add achievment!</h5>
  <div class="flex justify-center items-start  ">
    <div class="field w-11/12 ">
      <%= f.input :Text, input_html: {class: 'border w-full h-full'}, label: false %>
    </div>
    <div class=" w-1/12 ">
      <%= button_tag(type: 'submit', class: "h-10  border w-10 bg-blue-500 text-white") do %>
      <i class="fa fa-bullhorn"></i>
      <% end %>
    </div>
  </div>
</div>

<% end %>




<div class="border w-10/12 mx-auto p-5 bg-white mt-5 rounded">
  <ul>
    <% @opinions.each do |o| %>
    <li class="py-4 px-2  flex">
      <div class="h-12 w-12">
        <%= has_avatar(o.user) %>
      </div>
      <div class="flex flex-col ml-3">
        <div class="font-semibold text-gray-700">
          <%= o.user.FullName %>  
        </div>
        <div class="text-gray-500">
          <%= o.Text %>
        </div>
        
      </div>

    </li>

    <% end %>
  </ul>
</div>



<br>